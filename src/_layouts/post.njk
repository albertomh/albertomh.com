---
layout: base
---

<div class="row pb-4">
    <article class="col col-md-7 ms-2 ms-lg-0 pt-1 pt-md-3 ps-md-4 ps-lg-5">

        <div class="row">
            <div class="col-12 col-lg-10 mt-2 mt-md-0 mb-3">
                <h1 class="display-6 mb-2">{{ title }}</h1>
                <p class="text-muted mb-1">
                    {% if page.lang == 'en' %}Published on{% else %}Publicado el{% endif %} <span class="font-monospace">{{ createdAt }}</span>
                </p>
                {% if updatedAt %}
                    <p class="text-muted mb-1">
                        {% if page.lang == 'en' %}Revised on{% else %}Actualizado el{% endif %} <span class="font-monospace">{{ updatedAt }}</span>
                    </p>
                {% endif %}
            </div>
        </div>

        {{ content | safe }}

        <div class="row mt-5 mb-3">
            <div class="col-12 d-flex flex-column justify-content-center">
                <img src="/assets/img/post{{ path }}.svg" alt="{{ title }}" style="height: 24vh;">
                <div class="row">
                    <div class="col-12 col-md-8 offset-md-2">
                        <p class="text-muted small mt-2">
                            {{ attribution | safe }}
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </article>
</div>
