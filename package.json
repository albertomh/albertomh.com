{
    "name": "albertomh.com",
    "version": "0.0.1",
    "description": "",
    "scripts": {
        "build": "npm run prod:eleventy && npm run prod:parcel && npm run minifyHTML",
        "dev": "npm run build && python3 -m http.server --directory dist/",
        "minifyHTML": "html-minifier --input-dir ./dist --output-dir ./dist --collapse-whitespace --file-ext html",
        "prod:eleventy": "npx @11ty/eleventy --quiet",
        "prod:parcel": "npx parcel build src/assets/js/main.js --dist-dir ./dist/tmp/assets && npm run prod:css && npm run prod:js && rm -rf ./dist/tmp",
        "prod:css": "mkdir -p ./dist/assets/css && cp ./dist/tmp/assets/main.css ./dist/assets/css/",
        "prod:js": "mkdir -p ./dist/assets/js && cp ./dist/tmp/assets/main.js ./dist/assets/js/"
    },
    "author": "Alberto Morón Hernández",
    "license": "MIT",
    "dependencies": {
        "@popperjs/core": "^2.11.5",
        "bootstrap": "^5.1.3",
        "bootstrap-icons": "^1.8.1",
        "highlight.js": "^11.5.1"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.1",
        "@parcel/transformer-sass": "^2.5.0",
        "html-minifier": "^4.0.0",
        "parcel": "^2.5.0"
    }
}
